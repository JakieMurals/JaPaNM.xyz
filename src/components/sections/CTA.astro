---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import CtaButton from "../shared/CtaButton.astro";
import GradiantText from "../shared/GradiantText.astro";
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="cta" class={`pb-4 ${className}`}>
  <Container>
    <div
      class="w-full relative py-4 md:py-10 px-6 md:px-8 rounded-2xl bg-gradient-to-br from-slate-100 to-zinc-200 dark:from-slate-800 dark:to-zinc-800"
    >
      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-bold text-heading-1"
        >
        Let's Connect and 

          <GradiantText> Create </GradiantText>
          Some
          <GradiantText> Magic </GradiantText>
        </h1>
        <Paragraph className="pt-10 font-semibold">
          Email me: jimmy@japanm.xyz
        </Paragraph>
        <div class="mx-auto max-w-md sm:max-w-xl pt-10">
          <CtaButton />
        </div>
      </div>
    </div>
  </Container>
</section>
