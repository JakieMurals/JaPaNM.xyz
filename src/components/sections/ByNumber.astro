---
import Container from "../shared/Container.astro";
import Spots from "../shared/Spots.astro";
---

<section class="relative flex items-center justify-center min-h-[80vh] py-10 md:py-16">
  <Container className="w-full">
    <div
      class="w-full p-5 sm:p-6 py-6 sm:py-8 rounded-3xl bg-box-bg hover:bg-slate-200 dark:hover:bg-slate-800 border border-box-border shadow-lg shadow-box-shadow grid grid-cols-2 md:grid-cols-4 gap-y-6 gap-x-4 sm:gap-8 md:gap-6 lg:gap-12 text-center md:divide-x divide-box-border"
    >
      <div>
        <h2 class="font-bold text-2xl sm:text-3xl md:text-4xl text-heading-1">
          2
        </h2>
        <p class="mt-2 text-heading-3">Global Broadcast Events</p>
      </div>

      <div>
        <h2 class="font-bold text-2xl sm:text-3xl md:text-4xl text-heading-1">
          100+
        </h2>
        <p class="mt-2 text-heading-3">Projects</p>
      </div>

      <div>
        <h2 class="font-bold text-2xl sm:text-3xl md:text-4xl text-heading-1">
          30+
        </h2>
        <p class="mt-2 text-heading-3">Clients</p>
      </div>

      <div>
        <h2 class="font-bold text-2xl sm:text-3xl md:text-4xl text-heading-1">
          7
        </h2>
        <p class="mt-2 text-heading-3">Years of Experience</p>
      </div>
    </div>
  </Container>
</section>
